<Grid
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="300">
	
    <StackPanel VerticalAlignment="Top" Margin="0,20,0,0" Width="700">

		<StackPanel Orientation="Horizontal" Margin="0,0,0,0">
			<Label Content="Staraj się pisać krutkie wiadomości." Width="200"/>
		</StackPanel>
  
		<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
			<Label Content="Komputer:" Width="100"/>
			<TextBox x:Name="dialgDomaink" Width="80" IsEnabled="True"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Margin="0,20,0,0" Width="700">
			<Label Content="Wiadomość:" Width="100"/>
			<TextBox x:Name="dialgDomainw" Width="300" Height="100" IsEnabled="True" AcceptsReturn="True" TextWrapping="Wrap"/>
		</StackPanel>
  
		<StackPanel Orientation="Horizontal" Margin="140,30,0,0">
			<Button x:Name="Buttonwf" Content="Wyślij" Width="120" Height="40" HorizontalAlignment="Right" />
		</StackPanel>

		<StackPanel Orientation="Horizontal" Margin="280,-40,0,0">
			<Button x:Name="Buttonwc" Content="Zamknij" Width="120" Height="40" HorizontalAlignment="Right" />
		</StackPanel>
  
	</StackPanel>
	
</Grid>